{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C++ File",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",                   // デバッグ情報を含める
                "-O0",                  // 最適化を行わない
                "-std=c++20",           // C++20 標準を使用
                "${fileDirname}/${file}",              // 現在開いているファイル
                "-o",                   // 出力ファイルの指定
                "${fileDirname}/${fileBasenameNoExtension}" // 出力ファイル名（現在のファイル名と同じ）
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
    ]
}
